<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_80_transparent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    app:layout_constraintCircleRadius="10dp">

    <!-- 次数 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_execution_times_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/number_zero"
            android:textColor="@color/green"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/green"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/task_action_execution_times_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/number_zero"
            android:textColor="@color/green"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/task_execution_status_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/unstart"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        <!--<ImageView
            android:id="@+id/task_execution_hour_decade"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_1"
            android:layout_marginStart="-15dp"/>
        <ImageView
            android:id="@+id/task_execution_hour_quantile"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_2"
            android:layout_marginStart="-25dp"/>
        <ImageView
            android:id="@+id/task_execution_hour_point"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_pointer"
            android:layout_marginStart="-10dp"/>
        <ImageView
            android:id="@+id/task_execution_minute_decade"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_5"
            android:layout_marginStart="-10dp"/>
        <ImageView
            android:id="@+id/task_execution_minute_quantile"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_6"
            android:layout_marginStart="-25dp"/>
        <ImageView
            android:id="@+id/task_execution_minute_point"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_pointer"
            android:layout_marginStart="-10dp"/>
        <ImageView
            android:id="@+id/task_execution_second_decade"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_5"
            android:layout_marginStart="-10dp"/>
        <ImageView
            android:id="@+id/task_execution_second_quantile"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_number_6"
            android:layout_marginStart="-25dp"/>-->
    </LinearLayout>
    <!-- 次数 -->

    <!-- 暂停 -->

    <!-- 开始 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_execution_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/task_execution_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/ic_pause" />

        <ImageView
            android:id="@+id/task_execution_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/ic_stop" />

        <ImageView
            android:id="@+id/task_execution_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/ic_main_page" />
    </LinearLayout>
    <!-- 停止 -->

    <!-- 名字 -->


</LinearLayout>