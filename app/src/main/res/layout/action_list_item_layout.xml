<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- task name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 手势 icon -->
            <ImageView
                android:id="@+id/action_list_action_type_icon_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start" />
            <!-- 序号+名称 -->
            <TextView
                android:id="@+id/action_list_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="16sp" />
        </LinearLayout>


        <!-- function button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!--<ImageView
                android:id="@+id/action_list_exec_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/execute"
                android:focusable="false"
                android:src="@drawable/ic_exec_svg" />-->

            <ImageView
                android:id="@+id/action_list_edit_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:clickable="false"
                android:contentDescription="@string/edit"
                android:focusable="true"
                android:src="@drawable/ic_edit_svg" />

            <ImageView
                android:id="@+id/action_list_del_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:contentDescription="@string/del"
                android:focusable="false"
                android:src="@drawable/ic_del_svg" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 延迟 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <View
            android:layout_width="1dip"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/action_list_delay_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         android:background="#ccc" />-->

</LinearLayout>